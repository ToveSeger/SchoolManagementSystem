@model SchoolManagementSystem.Models.Enrollment

@{
    ViewBag.Title = "Create";
}

<script>
    $(function () {
        $("#Participant_FirstName").autocomplete({
            source: function (request, response) {
                $.ajax({
                    url: "/Enrollments/GetParticipants",
                    dataType: "json",
                    type: "POST",
                    data: {
                        term: request.term
                    },
                    success: function (data) {
                        console.log(data);
                        response($.map(data, function (participant) {
                            return { label: participant.Name, value: participant.Name, id: participant.Id };
                        }))
                    }
                });
            },
            minLength: 2,
            select: function (event, query) {
                console.log(query);
                $("#ParticipantId").val(query.item.id);
            }
        });
    });
</script>

